<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="TextView" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/textDestino_GenerarTraslado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textFechadetraslado_GenerarTraslado"
            android:layout_alignStart="@+id/textFechadetraslado_GenerarTraslado"
            android:layout_centerVertical="true"
            android:ems="10"
            android:hint="Destino"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/textTitulo_Generar_Traslado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="63dp"
            android:text="Generar Traslado"
            android:textColor="@color/colorPrimary"
            android:textSize="30sp"
            android:textStyle="bold|italic"/>

        <EditText
            android:id="@+id/textFechadetraslado_GenerarTraslado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textDestino_GenerarTraslado"
            android:layout_alignEnd="@+id/textTitulo_Generar_Traslado"
            android:layout_alignStart="@+id/textTitulo_Generar_Traslado"
            android:layout_marginBottom="30dp"
            android:ems="10"
            android:hint="Fecha de traslado"
            android:inputType="textPersonName"
            android:textAlignment="center"
            android:textStyle="italic"/>

        <Button
            android:id="@+id/boton_Generar_GenerarTraslado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/textDestino_GenerarTraslado"
            android:layout_alignStart="@+id/textDestino_GenerarTraslado"
            android:layout_below="@+id/textDestino_GenerarTraslado"
            android:layout_marginTop="52dp"
            android:background="@color/colorPrimary"
            android:elevation="24dp"
            android:text="Generar"
            android:textColor="@color/colorActivityBackground"/>

    </RelativeLayout>
</LinearLayout>