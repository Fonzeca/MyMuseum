<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.a000webhostapp.mymuseum.Vista.InicioFragment">

    <TextView
        android:id="@+id/titulo_inicio_fragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="Objetos agregados recientemente:"
        android:textColor="#333"
        android:textSize="18sp"
        android:textStyle="bold"/>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipeActualizar_InicioFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/inventos_recientes_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:dividerHeight="0dp"
            />
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>
