<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:weightSum="1">

    <LinearLayout
        android:id="@+id/contenedorA_item_historialPintura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/contenedorB_item_HistoriaPintura"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            app:cardElevation="24dp">

            <LinearLayout
                android:id="@+id/contenedorC_Item_HistorialPintura"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/darkGray"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textPintura_historialPintura"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.40"
                    android:background="@color/darkGray"
                    android:padding="16dp"
                    android:text="Pintura "
                    android:textAlignment="textStart"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textlugarAnterior_HistorialPintura"
                    android:layout_width="109dp"
                    android:layout_height="wrap_content"
                    android:background="@color/darkGray"
                    android:padding="16dp"
                    android:text="Lugar Anterior"
                    android:textAlignment="textStart"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textLugarActual_HistorialPintura"
                    android:layout_width="92dp"
                    android:layout_height="wrap_content"
                    android:background="@color/darkGray"
                    android:padding="16dp"
                    android:text="Lugar Actual"
                    android:textAlignment="textStart"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textFecha_HistorialPintura"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/darkGray"
                    android:padding="16dp"
                    android:text="21/10/2017"
                    android:textAlignment="textStart"
                    android:textColor="#FFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>